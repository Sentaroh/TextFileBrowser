<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/privacy_polycy_dlg_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/privacy_polycy_dlg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Privacy policy"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        />
    </LinearLayout>
    <include layout="@layout/divider_line1_turquoise" />
    <WebView
        android:id="@+id/privacy_polycy_dlg_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/privacy_polycy_dlg_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msgs_common_dialog_close"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</LinearLayout>